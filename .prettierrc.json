{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "overrides": [
        {
            "files": ["**/*.html", "**/*.yaml", "**/*.yml"],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": ["**/*.yaml", "**/*.yml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
